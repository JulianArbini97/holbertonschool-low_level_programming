CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:%.c=%.o)
NAME=holberton
RM=rm
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(NAME)

clean:
        $(RM) -f *~ $(NAME)

oclean:
        $(RM) -f *.o

fclean:
        $(RM) -f *~ $(NAME)
        $(RM) -f *.o

$(NAME): $(OBJ)
        $(CC) $(CFLAGS) $(OBJ) -o $@

re: oclean all
